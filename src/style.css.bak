body {
  margin: 0;
  padding: 0;
  font-family: 'Inter', 'SF Pro Display', 'SF Pro Icons', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Arial, sans-serif;
  background: #fff;
  color: #222;
  font-size: 16px;
  line-height: 1.7;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.blog-main {
  max-width: 600px;
  margin: 0 auto;
  padding: 32px 16px 0 16px;
}

.blog-header {
  text-align: left;
  margin-bottom: 2.5rem;
}
.blog-header h1 {
  font-size: 2rem;
  font-weight: 600;
  margin: 0 0 0.4em 0;
  letter-spacing: 0.01em;
  color: #222;
}
.blog-header h2 {
  font-size: 1.05rem;
  font-weight: 400;
  margin: 0 0 1.3em 0;
  color: #888;
  letter-spacing: 0.01em;
}
.rss-link {
  font-size: 0.95rem;
  color: #888;
  text-decoration: none;
  margin-left: 0.5rem;
}
.rss-link:hover {
  color: #222;
}

.blog-years {
  margin-bottom: 2.5rem;
}
.year-block {
  margin-bottom: 2rem;
}
.year-block h3 {
  font-size: 1.02rem;
  font-weight: 500;
  margin: 0 0 0.5em 0;
  color: #888;
  letter-spacing: 0.01em;
}
.year-block ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
.year-block li {
  margin-bottom: 0.35em;
  font-size: 1em;
  line-height: 1.7;
  text-align: left;
  word-break: break-word;
}
.year-block .date {
  color: #bbb;
  font-size: 0.97em;
  margin-right: 0.7em;
  font-family: 'Menlo', 'Consolas', 'Liberation Mono', monospace;
}
.year-block a {
  color: #222;
  text-decoration: none;
  border-bottom: 1px dotted #bbb;
  transition: border 0.2s;
  font-weight: 400;
}
.year-block a:hover {
  border-bottom: 1px solid #222;
  color: #111;
}

.blog-footer {
  text-align: left;
  font-size: 0.97rem;
  color: #bbb;
  margin-top: 3rem;
  padding-bottom: 2rem;
  letter-spacing: 0.01em;
}
.blog-footer a {
  color: #bbb;
  text-decoration: none;
  margin-right: 0.7em;
  font-weight: 400;
}
.blog-footer a:hover {
  color: #222;
}
.copyright {
  margin-top: 0.7em;
  font-size: 0.92em;
  color: #bbb;
}

@media (max-width: 700px) {
  .blog-main {
    padding: 18px 4vw 0 4vw;
  }
  .blog-header h1 {
    font-size: 1.18rem;
  }
  .year-block h3 {
    font-size: 0.97rem;
  }
}
